<h3>Here are all your foods:</h3>

<div class="card">
  <div class="card-body">
    <ul class="list-group">
      <% @user_foods_grouped.each do |food| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to food.name, user_food_path(@user, food) %>
          <span class="food-count badge badge-primary badge-pill"></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
