<h3>Your most popular foods</h3>

<div class="card">
  <div class="card-body">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Name:
        <span>
          # days eaten:
        </span>
      </li>
      <% @user_foods_grouped.each do |food| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to '', user_food_path(@user, food), class: "food-name" %>
          <span class="food-count badge badge-primary badge-pill"></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<script type="text/javascript">
$(function() {
  getFoods(<%= @id %>);
});
</script>
