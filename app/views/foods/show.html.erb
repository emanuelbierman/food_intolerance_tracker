<div class="container">
  <h3>
    <span id="food-title">
      <%# <%= @food.name.split.map(&:capitalize).join(' ') %> %>
    </span>
    <span class="badge">
      <button id="js-next" data-user="<%= @id %>" data-food="<%= @food.id %>">next food -></button>
    </span>
  </h3>
  <% @food.days.each do |day| %>
    <div class="row">
      <div class="card" style="width: 18rem;">
        <h5 class="card-title">
          When you ate <span id="food-name"><%= @food.name %></span>, these were your symptoms:
        </h5>
        <div class="card-body">
          <h6 class="day-mdy card-subtitle mb-2 text-muted">
          </h6>
          <p class="card-text">
            <% day.symptoms.each do |symptom| %>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <%= link_to symptom.description, user_symptom_path(current_user, symptom), class: "symptom-description" %>
                </li>
              </ul>
            <% end %>
          </p>
        </div>
      </div>
      <%# <% if day.next_day %> %>
        <div class="card" style="width: 18rem;">
          <h5 class="card-title">
            On the next day, these were your symptoms:
          </h5>
          <div class="card-body">
            <h6 class="day-mdy card-subtitle mb-2 text-muted">
            </h6>
            <p class="card-text">
              <%# <% day.next_day_symptoms.each do |symptom| %> %>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <%# <%= link_to symptom.description, user_symptom_path(current_user, symptom) %> %>
                  </li>
                </ul>
              <%# <% end %> %>
            </p>
          </div>
        </div>
      <%# <% end %> %>
      <%# <% if day.two_days_later %> %>
        <div class="card" style="width: 18rem;">
          <h5 class="card-title">
            Two days later, these were your symptoms:
          </h5>
          <div class="card-body">
            <h6 class="day-mdy card-subtitle mb-2 text-muted">
            </h6>
            <p class="card-text">
              <%# <% day.two_days_later_symptoms.each do |symptom| %> %>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <%# <%= link_to symptom.description, user_symptom_path(current_user, symptom) %> %>
                  </li>
                </ul>
              <%# <% end %> %>
            </p>
          </div>
        </div>
      <%# <% end %> %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
$(function() {
  const user_id = $("button#js-next").data("user");
  let food_id = $("button#js-next").data("food");
  getFoodDays(user_id, food_id);
  food_id += 1;
  $("button#js-next").on('click', function() {
    getFoodDays(user_id, food_id);
  })
});
</script>
