<!-- display/edit username -->
<h3>Welcome <%= @user.username %>!</h3>

<div class="card" style="width: 18rem;">
  <div class="card-header">
    <%= "Today: " + @day.day_of_week + ", " + @day.month_day_year %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      What did you eat today?
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">Food</th>
            <th scope="col">Serving</th>
          </tr>
        </thead>
        <tbody class="days_foods">
          <% @day.days_foods.each do |days_food| %>
          <tr>
            <% if days_food.valid? %>
              <th scope="row">
                <%= link_to days_food.food.name, user_food_path(@user, days_food.food) %>
              </th>
              <td>
                <%= days_food.serving %>  /<%= link_to("delete", "/users/#{@user.id}/days_foods/#{days_food.id}", method: :delete) %>
              </td>
              <th scope="row">
                <%= days_food.comments %>
              </th>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="form-group">
        <%= form_for [@user, @days_food] do |f| %>
          <%= f.hidden_field :day_id, value: @day.id %>
          <%= f.hidden_field :user_id, value: @user.id %>
          <%= f.collection_select(:food_id, @user.food_names, :id, :name, {include_blank: 'Existing food?', selected: 'Existing food?'}) %>
          <%= f.fields_for :food do |food_fields| %>
            <br><%= food_fields.text_field :name, placeholder: "Or create new food" %>
          <% end %>
          <%= f.number_field :serving, placeholder: "Servings (required)" %>
          <%= f.text_field :comments, value: @days_food.comments, placeholder: "Comments?"  %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </li>
    <li class="list-group-item">
      What did you feel today?
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">Symptom</th>
            <th scope="col">Frequency</th>
          </tr>
        </thead>
        <tbody class="days_symptoms">
          <% @day.days_symptoms.each do |days_symptom| %>
          <tr>
            <% if days_symptom.valid? %>
              <th scope="row">
                <%= link_to days_symptom.symptom.description, user_symptom_path(@user, days_symptom.symptom) %>
              </th>
              <td>
                <%= days_symptom.frequency %>  /<%= link_to("delete", "/users/#{@user.id}/days_symptoms/#{days_symptom.id}", method: :delete) %>
              </td>
              <th scope="row">
                <%= days_symptom.comments %>
              </th>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="form-group">
        <%= form_for [@user, @days_symptom] do |f| %>
          <%= f.hidden_field :day_id, value: @day.id %>
          <%= f.hidden_field :user_id, value: @user.id %>
          <%= f.collection_select(:symptom_id, @user.symptom_descriptions, :id, :description, {include_blank: 'Existing symptom?', selected: 'Existing symptom?'}) %>
          <%= f.fields_for :symptom do |symptom_fields| %>
            <br><%= symptom_fields.text_field :description, placeholder: "Or create new symptom" %>
          <% end %>
          <%= f.number_field :frequency, placeholder: "Frequency (required)" %>
          <%= f.text_field :comments, value: @days_symptom.comments, placeholder: "Comments for today?"  %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </li>
  </ul>
</div>

<script type="text/javascript" charset="utf-8">
$(function() {
  $('form').submit(function(event) {
    event.preventDefault();
    let data = $(this).serialize();

    // distinguish between two forms on the page
    let user_id = '';
    let url = '';
    if ($(this).attr("class") === "new_days_food") {
      user_id = $("input#days_food_user_id", this)[0].value;
      url = `/users/${user_id}/days_foods`;
    } else if ($(this).attr("class") === "new_days_symptom") {
      user_id = $("input#days_symptom_user_id", this)[0].value;
      url = `/users/${user_id}/days_symptoms`;
    }

    let posting = $.ajax({
      url: url,
      method: 'POST',
      data: data
    });

    posting.done( data => {
      // distinguish between two forms on the page
      let userId = data.data.attributes.day.user_id;
      let comments = data.data.attributes.comments;
      if (data.data.type === "days-foods") {
        let foodId = data.data.attributes.food.id;
        let foodName = data.data.attributes.food.name;
        let serving = data.data.attributes.serving;
        let newDaysFoodHTML = `
          <tr><th scope="row">
          <a href="/users/${userId}/foods/${foodId}">${foodName}</a>
          </th><td>
          ${serving} / delete link
          </td><th scope="row">
          ${comments}
          </th></tr>
        `;
        $("tbody.days_foods").append(newDaysFoodHTML);
      } else if (data.data.type === "days-symptoms") {
        let symptomId = data.data.attributes.symptom.id;
        let symptomDescription = data.data.attributes.symptom.description;
        let frequency = data.data.attributes.frequency;
        let newDaysSymptomHTML = `
          <tr><th scope="row">
          <a href="/users/${userId}/symptoms/${symptomId}">${symptomDescription}</a>
          </th><td>
          ${frequency} / delete link
          </td><th scope="row">
          ${comments}
          </th></tr>
        `;
        $("tbody.days_symptoms").append(newDaysSymptomHTML);
      }

    });
  });
});
</script>
