<h5>Sign in or log in to begin tracking your food intolerances: </h5>
<% unless @facebook_user %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
  <div class="card" style="width: 18rem;">
    <h5 class="card-header">Existing User?</h5>
    <div class="card-body">
      <%= form_for @user, url: "/signin" do |f| %>
        <div class="form-group">
          <%= f.label :name, "Username:"%>
          <%= f.text_field :username %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Password:"%>
          <%= f.text_field :password %>
        </div>
        <%= f.submit "Sign In", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="card" style="width: 18rem;">
  <% if @facebook_user %>
    <h5 class="card-header">Hi <%= @user.username %>. Please enter a password to create your new account with us.</h5>
  <% else %>
    <h5 class="card-header">New User?</h5>
  <% end %>
  <div class="card-body">
    <%= form_for @user, url: "/signup" do |f| %>
      <div class="form-group">
        <%= f.label :name, "Username:"%>
        <%= f.text_field :username, value: @user.username %>
        <%# <%= f.text_field :username, value: @user.username ? @user.username : nil %> %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password:"%>
        <%= f.text_field :password %>
      </div>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
