<h3>Here are all your symptoms:</h3>

<div class="card">
  <div class="card-body">
    <ul class="list-group">
      <% @user_symptoms_grouped.each do |symptom| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to symptom.description, user_symptom_path(@user, symptom) %>
          <span class="badge badge-primary badge-pill"><%= symptom.days.count %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
